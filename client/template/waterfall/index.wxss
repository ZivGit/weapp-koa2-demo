.waterfall-item {
    width: 330rpx;
    border-radius: 4rpx;
    overflow: hidden;
}

.waterfall-item+.waterfall-item {
    margin-top: 30rpx;
}

.waterfall-preview {
    position: relative;
    background-color: #EEEEEE;
}

.waterfall-preview-img {
    display: block;
    width: 100%;
}

.waterfall-preview-indicate {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    padding: 10rpx;
    font-size: 24rpx;
    line-height: 1;
    color: rgba(255, 255, 255, 0.8);
}

.waterfall-preview-indicate text {
    padding: 8rpx;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 10rpx;
}

.waterfall-preview-indicate text.count {
    width: 24rpx;
    height: 24rpx;
    border-radius: 50%;
    text-align: center;
}

.waterfall-title {
    padding: 20rpx;
    background-color: white;
    font-size: 28rpx;
}