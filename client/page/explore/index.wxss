/* page/explore/index.wxss */
.page {
    padding: 30rpx 0;
}

.page__hd {
    margin-bottom: 30rpx;
}

/* 横幅 */
.swiper-banner {
    height: 300rpx;
}

.swiper-banner__item {
    width: 100%;
    height: 300rpx;
}

/* 排行榜 */
.swiper-top {
    height: 440rpx;
}

.swiper-top .weui-cell__hd {
    margin-right: 30rpx;
}

/* 通用面板 */
.weui-panel {
    margin-top: 30rpx;
}

/* 专题 */
.card-item {
    position: relative;
    width: 400rpx;
    height: 400rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.card-item .card-preview {
    display: block;
    width: 100%;
    height: 100%;
    background-color: #EEEEEE;
}

.card-item .card-text {
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    padding: 10rpx 20rpx;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
}

.card-item .card-text text {
    line-height: 1.6;
    text-align: center;
    font-size: 48rpx;
    color: white;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

/* 专题列表 */
.panel-hot .card {
    margin: 30rpx 0;
    white-space: nowrap;
}

.panel-hot .card-item {
    display: inline-block;
    margin-right: 30rpx;
    margin-left: 30rpx;
    vertical-align: top;
    white-space: normal;
}

.panel-hot .card-item+.card-item {
    margin-left: 0;
}
