.page__bd {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 97rpx;
    left: 0;
}

.textarea {
    width: 100%;
    height: 100%;
    padding: 15rpx;
    box-sizing: border-box;
}

.page__ft {
    position: fixed;
    right: 0;
    bottom: 0;
    left: 0;
    height: 96rpx;
    border-top: 1rpx solid #a7a89a;
    background-color: #eff0dc;
}

.submit {
    height: 66rpx;
    padding: 15rpx 100rpx;
    line-height: 66rpx;
    text-align: center;
    font-size: 36rpx;
}

.menu {
    position: absolute;
    top: 0;
    right: 0;
    width: 100rpx;
    height: 100%;
}

.menu .menu-icon {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 40rpx;
    height: 30rpx;
    border-top: 5rpx solid #c9cabb;
    border-bottom: 5rpx solid #c9cabb;
    margin: auto;
}

.menu .menu-icon::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: block;
    height: 5rpx;
    background-color: #c9cabb;
    margin: auto;
}
